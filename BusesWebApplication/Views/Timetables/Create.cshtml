@model BusesWebApplication.Timetable

@{
    ViewData["Title"] = "Додавання";
}

<h1>Додати рейс до розкладу</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RouteId" class="control-label"></label>
                <select asp-for="RouteId" class ="form-control" asp-items="ViewBag.RouteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class ="form-control" asp-items="ViewBag.DriverId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BusId" class="control-label"></label>
                <select asp-for="BusId" class ="form-control" asp-items="ViewBag.BusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedDeparture" class="control-label"></label>
                <input asp-for="ExpectedDeparture" class="form-control" />
                <span asp-validation-for="ExpectedDeparture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedArrival" class="control-label"></label>
                <input asp-for="ExpectedArrival" class="form-control" />
                <span asp-validation-for="ExpectedArrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="TripStatusId" class="form-control" value="@ViewBag.StatusId" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до розкладу</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
