@{
    ViewData["Title"] = "Пошук рейсів";
}

<h1>Пошук рейсів</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Початкова станція</label>
                <select id="from" name="stationFrom" class="form-control" asp-items="ViewBag.Stations"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Кінцева станція</label>
                <select id="to" name="stationTo" class="form-control" asp-items="ViewBag.Stations"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Шукати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

