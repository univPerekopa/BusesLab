@model BusesWebApplication.Route

@{
    ViewData["Title"] = "Деталі";
}

<h1>Інформація про маршрут</h1>

<div>
    <h4>Route</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @foreach(var station in Model.RoutesStations) {
            <dt class = "col-sm-2">
                Станція @station.PositionInRoute
            </dt>
            <dd class = "col-sm-10">
                @station.Station.Name
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Назад до списку</a>
</div>
